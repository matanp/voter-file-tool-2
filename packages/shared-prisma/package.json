{
  "name": "@voter-file-tool/shared-prisma",
  "version": "1.0.0",
  "description": "Shared Prisma types and utilities for the voter file tool",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "postinstall": "prisma generate --schema=../../apps/frontend/prisma/schema.prisma",
    "build": "prisma generate --schema=../../apps/frontend/prisma/schema.prisma && tsc",
    "dev": "tsc --watch",
    "clean": "rm -rf dist tsconfig.tsbuildinfo",
    "prebuild": "pnpm clean",
    "sync": "node ../../scripts/sync-prisma-models.js"
  },
  "dependencies": {
    "@prisma/client": "^5.15.0"
  },
  "devDependencies": {
    "typescript": "^5.4.5",
    "prisma": "^5.15.0"
  },
  "peerDependencies": {
    "@prisma/client": "^5.15.0"
  },
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "restricted"
  }
}
