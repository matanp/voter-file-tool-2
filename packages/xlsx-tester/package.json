{
  "name": "@voter-file-tool/xlsx-tester",
  "version": "1.0.0",
  "description": "XLSX helper functions for reading Excel file metadata and data",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "xlsx-tester": "dist/cli.js"
  },
  "scripts": {
