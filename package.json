{
  "name": "voter-file-tool-workspace",
  "version": "1.0.0",
  "private": true,
  "packageManager": "pnpm@8.15.7",
  "scripts": {
    "build:packages": "pnpm --filter './packages/**' run build",
    "test": "tsx scripts/run-tests.ts",
    "prepare": "pnpm run build:packages",
    "db:setup": "./scripts/setup-dev-db.sh",
    "sync-prisma": "node scripts/sync-prisma-models.js",
    "db:seed-lted-crosswalk": "pnpm --filter voter-file-tool run db:seed-lted-crosswalk",
    "terraform:apply": "terraform apply -var-file=infrastructure/terraform.tfvars",
    "terraform:recreate": "terraform apply -replace=aws_lightsail_instance.nodejs_server -var-file=infrastructure/terraform.tfvars"
  },
  "devDependencies": {
    "@types/node": "^20.11.20",
    "listr2": "^8.0.0",
    "tsx": "^4.21.0"
  },
  "pnpm": {
    "overrides": {
      "@types/react": "19.1.12",
      "@types/react-dom": "19.1.9"
    }
  }
}
